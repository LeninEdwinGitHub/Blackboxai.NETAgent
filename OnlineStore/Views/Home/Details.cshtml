@model OnlineStore.Models.Product

<div class="max-w-4xl mx-auto bg-white rounded-lg shadow p-6">
    <div class="flex flex-col md:flex-row">
        <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full md:w-1/3 rounded mb-4 md:mb-0" />
        <div class="md:ml-6 flex flex-col justify-between">
            <div>
                <h1 class="text-3xl font-bold mb-4">@Model.Name</h1>
                <p class="text-gray-700 mb-6">@Model.Description</p>
                <span class="text-2xl font-semibold text-indigo-600">$@Model.Price</span>
            </div>
            <div class="mt-6">
                <a href="@Url.Action("AddToCart", "Cart", new { productId = Model.Id })" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">Add to Cart</a>
                <a href="@Url.Action("Index", "Home")" class="ml-4 text-indigo-600 hover:text-indigo-800">Back to Products</a>
            </div>
        </div>
    </div>
</div>
