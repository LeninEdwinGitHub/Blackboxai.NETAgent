﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - OnlineStore</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-['Roboto']">
    <header class="bg-white shadow">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <a href="/" class="text-2xl font-bold text-gray-800">OnlineStore</a>
            <nav>
                <a href="/" class="text-gray-700 hover:text-gray-900 px-3">Home</a>
                <a href="/Cart" class="text-gray-700 hover:text-gray-900 px-3">
                    <i class="fas fa-shopping-cart"></i> Cart
                </a>
            </nav>
            <form id="selectLanguage" method="post" asp-controller="Culture" asp-action="SetCulture" class="inline-block ml-4">
                <select name="culture" onchange="this.form.submit()" class="border rounded px-2 py-1 text-sm">
                    <option value="en" selected>English</option>
                    <option value="es">Español</option>
                </select>
                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
            </form>
        </div>
    </header>
    <main class="container mx-auto px-4 py-6">
        @RenderBody()
    </main>
    <footer class="bg-white shadow mt-12">
        <div class="container mx-auto px-4 py-4 text-center text-gray-600">
            &copy; 2024 OnlineStore. All rights reserved.
        </div>
    </footer>
</body>
</html>
