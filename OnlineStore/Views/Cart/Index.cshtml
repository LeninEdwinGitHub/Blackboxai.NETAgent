@model List<OnlineStore.Models.CartItem>

<h1 class="text-3xl font-bold mb-6">Shopping Cart</h1>

@if (Model == null || Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="min-w-full bg-white rounded shadow">
        <thead>
            <tr>
                <th class="py-2 px-4 border-b">Product</th>
                <th class="py-2 px-4 border-b">Price</th>
                <th class="py-2 px-4 border-b">Quantity</th>
                <th class="py-2 px-4 border-b">Total</th>
                <th class="py-2 px-4 border-b">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="py-2 px-4 border-b">@item.Product.Name</td>
                    <td class="py-2 px-4 border-b">$@item.Product.Price</td>
                    <td class="py-2 px-4 border-b">@item.Quantity</td>
                    <td class="py-2 px-4 border-b">$@(item.Product.Price * item.Quantity)</td>
                    <td class="py-2 px-4 border-b">
                        <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = item.ProductId })" class="text-red-600 hover:text-red-800">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-6 flex justify-between items-center">
        <a href="@Url.Action("Index", "Home")" class="text-indigo-600 hover:text-indigo-800 font-semibold">Continue Shopping</a>
        <a href="@Url.Action("Checkout", "Cart")" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">Checkout</a>
    </div>
}
