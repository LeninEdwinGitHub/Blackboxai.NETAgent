@model OnlineStore.Models.Order

<h1 class="text-3xl font-bold mb-6">Checkout</h1>

<form asp-action="Checkout" method="post" class="max-w-lg bg-white rounded-lg shadow p-6">
    <div class="mb-4">
        <label asp-for="CustomerName" class="block text-gray-700 font-semibold mb-2"></label>
        <input asp-for="CustomerName" class="w-full border border-gray-300 rounded px-3 py-2" />
        <span asp-validation-for="CustomerName" class="text-red-600"></span>
    </div>
    <div class="mb-4">
        <label asp-for="CustomerEmail" class="block text-gray-700 font-semibold mb-2"></label>
        <input asp-for="CustomerEmail" type="email" class="w-full border border-gray-300 rounded px-3 py-2" />
        <span asp-validation-for="CustomerEmail" class="text-red-600"></span>
    </div>
    <div class="mb-4">
        <label asp-for="ShippingAddress" class="block text-gray-700 font-semibold mb-2"></label>
        <textarea asp-for="ShippingAddress" class="w-full border border-gray-300 rounded px-3 py-2"></textarea>
        <span asp-validation-for="ShippingAddress" class="text-red-600"></span>
    </div>
    <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">Place Order</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
