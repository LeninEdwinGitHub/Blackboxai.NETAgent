@page
@model IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Home page";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h1 class="display-4 mb-3 gradient-text">@Localizer["Welcome"]</h1>
                    <p class="lead mb-4">Choose from a wide range of premium cars for your next journey.</p>
                    <h4 class="mb-3">Available Cars:</h4>
                    <ul class="list-group list-group-flush mb-4">
                        @foreach (var car in Model.AvailableCars)
                        {
                            <li class="list-group-item">@car</li>
                        }
                    </ul>
                    <a href="#" class="btn btn-primary btn-lg">Book Now</a>
                </div>
            </div>
        </div>
    </div>
</div>
